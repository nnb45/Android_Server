<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Products
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Product name</th>
                                <th>CategoryID</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.categoryId}}</td>
                                <td>{{this.price}}</td>
                                <td>{{this.quantity}}</td>
                                <td><img width="200" height="150" src="{{this.image}}" alt=""></td>
                                <td>
                                    <button class="btn" onclick="goDetail('{{this.id}}');">Edit</button>
                                    <button class="btn btn-delete"
                                        onclick="confirmDelete('{{this.id}}');">Delete</button>
                                </td>
                            </tr>
                            {{/each}}
                            
                        </tbody>
                    </table>
                    
                    <a href="new.hbs"><img onclick="" class="add" src="https://cdn-icons-png.flaticon.com/512/189/189689.png"/></a>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>

<script>
    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }
    const confirmDelete = (id) => {
        swal({
            title: "Xác nhận xóa?",
            text: "Xóa sẽ mất!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then(async (willDelete) => {
                if (willDelete) {
                    let url = `/product/${id}`;
                    let option = {
                        method: 'DELETE'
                    }
                    let result = await fetchAPI(url, option);
                    if (result.status) {
                        swal("Xóa thành công!", {
                            icon: "success",
                        });
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        swal("Xóa thất bại!", {
                            icon: "error",
                        });
                    }
                }
            });
    }

    const goDetail = (id) => {
        window.location.href = `/product/${id}/detail`;
    }

</script>