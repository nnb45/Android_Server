<div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Categories
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Category name</th>
                                            <th>Category desc</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each categories}}
                                        <tr>
                                            <td>{{this.id}}</td>
                                            <td>{{this.category_name}}</td>
                                            <td>{{this.category_desc}}</td>
                                            <td>
                                                <button onclick="goDetail('{{this.id}}');">Edit</button>
                                                <button onclick="confirmDelete('{{this.id}}');">Delete</button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>

<script>
    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }
    const confirmDelete = (id) => {
        swal({
            title: "Xác nhận xóa?",
            text: "Xóa sẽ mất!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then(async (willDelete) => {
                if (willDelete) {
                    let url = `/categories/${id}`;
                    let option = {
                        method: 'DELETE'
                    }
                    let result = await fetchAPI(url, option);
                    if (result.status) {
                        swal("Xóa thành công!", {
                            icon: "success",
                        });
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        swal("Xóa thất bại!", {
                            icon: "error",
                        });
                    }
                }
            });
    }

    const goDetail = (id) => {
        window.location.href = `/categories/${id}/detail`;
    }

</script>